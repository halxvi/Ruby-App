
<p id="notice"><%= notice %></p>
<div class="container">
<h1>Tasks</h1>

<table>
  <thead> 
    <tr>
      <th>a<%= sort_link(@q,:Username, defalut_order: :desc) %></th>
      <th>a<%= sort_link(@q,:Task,defalut_order: :desc) %></th>
      <th>a<%= sort_link(@q,:Start date,defalut_order: :desc) %></th>
      <th>a<%= sort_link(@q,:End date,defalut_order: :desc) %></th>
      <th>a<%= sort_link(@q,:Accomplished flag,defalut_order: :desc) %></th> 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_tasks.each do |my_task| %>
      <tr>
        <td><%= my_task.username %></td>
        <td><%= my_task.task %></td>
        <td><%= my_task.start_date %></td>
        <td><%= my_task.end_date %></td>
        <td><%= my_task.accomplished_flag %></td>
        <td><%= link_to 'Show', my_task %></td>
        <td><%= link_to 'Edit', edit_my_task_path(my_task) %></td>
        <td><%= link_to 'Destroy', my_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New My Task', new_my_task_path %>

</div>
